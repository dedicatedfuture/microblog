<% if @current_user %>
<div class="container">
  <h2>Welcome <%= @current_user.fname %>!</h2>
  <!-- display users followING feed -->
</div>

<div class="container">
   <form action="microsubmit" method="post" id="microsubmit">
    <p>Title: <input type="text" name="title"></p>
    <p>Blog: (150 character limit)<textarea rows="3" cols="30" name="microblog" form="microsubmit" maxlength="150"></textarea></p>
    <p><input type="submit" value="Post"></p>
  </form>
</div>

<% @posts.first(10).each do |p| %>

  <div class="posts">
    <h3><%= p.title %></h3>
    <p><%= p.body %></p>
    <p><%= p.user.username %></p>


     <!-- <form method="POST" action="/unfollow">
        <input type="hidden" name="following" value="<%= p.user.id %>">
        <input type="hidden" name="followed" value="<%= @current_user.id %>">
        <button type="submit" class="button">Un-follow</button> -->


     <form method="POST" action="/follow">
        <input type="hidden" name="following" value="<%= p.user.id %>">
        <input type="hidden" name="followed" value="<%= @current_user.id %>">
        <button type="submit" class="button">Follow</button>
      </form>

  </div>
<% end %>



<% else %>
<div class="container" id="firstdiv">
  <h1>Welcome to Philly</h1>
  <!-- display list of ten most recent blog feeds -->
</div>
  <% @posts.first(10).each do |p| %>
    <div class="posts">
      <h3><%= p.title %></h3>
      <p><%= p.body %></p>
      <p><%= p.user.username %></p>
    </div>
  <% end %>
<% end %>
