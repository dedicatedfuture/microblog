<% if @current_user %>
<div class="container">
  <h2>Welcome <%= @current_user.fname %>!</h2>
  <!-- display users followING feed -->
</div>

<div class="container">
   <form action="microsubmit" method="post" id="microsubmit">
    <p>Title: <input type="text" name="title"></p>
    <p>Blog: <textarea rows="10" cols="50" name="microblog" form="microsubmit"></textarea></p>
    <p><input type="submit" value="Post"></p>
  </form>
</div>

<% @posts.first(10).each do |p| %>
  <div class="posts">
    <h3><%= p.title %></h3>
    <p><%= p.body %></p>
    <p><%= p.user.username %></p>
  </div>
<% end %>
<% else %>
<div class="container">
  <h1>Welcome to Philly</h1>
  <!-- display list of ten most recent blog feeds -->
</div>
  <% @posts.first(10).each do |p| %>
    <div class="posts">
      <h3><%= p.title %></h3>
      <p><%= p.body %></p>
      <p><%= p.user.username %></p>
    </div>
  <% end %>
<% end %>
