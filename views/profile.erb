<% if @current_user %>
<div class="container">
  <h2>Profile Details</h2>
  <p>Username: <%= @current_user.username %></p>
  <p>Description: <%= @current_user.description %></p>
  <!-- display a text box to 'post' blogs at top, with display of all blogs authored by user -->
  <div class="blogs">
    <p><%= @current_user_posts %></p>
  </div>
</div>
<% else %>
<div class="container">
  <h1>You are not signed in</h1>
  <p>Sign In</p>
  <h4>OR</h4>
  <p>Sign Up <a href="/signup">Here</a></p>
</div>
<% end %>
